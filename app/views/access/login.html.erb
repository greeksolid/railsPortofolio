<% provide(:title, 'Login') %>
<div class="login">
	<h1>Log In</h1>
	<%= form_tag({:action => "attempt_login"}, {:class => 'login_form'}) do %>
		
		<p>
			<%= label_tag(:username) %>
			<%= text_field_tag(:username) %>
		</p>

		<p>
			<%= label_tag(:password) %>
			<%= password_field_tag(:password) %>
		</p>
		
		<p>
			<%= submit_tag("Log In") %>
		</p>

	<% end %>
</div>