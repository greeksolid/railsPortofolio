<%# Provide correct page title %>
<% if current_page?(:controller => 'projects', :action => 'index') %>
	<% provide(:title, 'Projects') %>
<% elsif current_page?(:controller => 'access', :action => 'index') %>
	<% provide(:title, 'Admin Interface') %>
<% end %>

<%# Display admin links if on admin panel %>
<% if current_page?(:controller => 'access', :action => 'index') %>
	<%= render 'access/admin_new_links' %>
<% end %>

<%# Display all the projects %>
<%= render 'projects/list_projects' %>

<%# Display all the categories if on admin panel %>
<% if current_page?(:controller => 'access', :action => 'index') %>
  <%= render 'categories/list_categories' %>
<% end %>

<%# Display all the technologies if on admin panel %>
<% if current_page?(:controller => 'access', :action => 'index') %>
  <%= render 'technologies/list_technologies' %>
<% end %>