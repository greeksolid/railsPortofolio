<h1>Projects</h1>

<% @projects.each do |project| %>
	<div class="project">
		<h2><%= link_to project.title, project %></h2>
		<p>
			<%= project.description %>
		</p>
		<p>
			<%= link_to "Edit Project", edit_project_path(project) %>
			<%= link_to "Delete Project", project_path(project), :confirm => 'Are you sure?', :method => :delete %>
		</p>
	</div>
<% end %>