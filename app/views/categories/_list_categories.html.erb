<div class="categories">
  <h1>Categories</h1>
  <ul>
    <% @categories.each do |category| %>
        <li class="category">
          <h3><%= category.name %></h3>
          <div class="admin-links">
              <%= link_to "Edit", edit_category_path(category) %>
              <%= link_to "Delete", category_path(category), data: {'confirm' => 'Are you sure?'}, :method => :delete %>
          </div>
        </li>
    <% end %>
  </ul>
</div>